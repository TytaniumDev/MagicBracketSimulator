{
  "name": "worker",
  "version": "1.0.0",
  "description": "Unified worker: pulls jobs via Pub/Sub or polling, runs Forge simulations as child processes",
  "main": "dist/worker.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/worker.js",
    "dev": "tsx src/worker.ts",
    "watch": "tsx watch src/worker.ts",
    "start:keep-awake": "caffeinate -i npm start"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^4.3.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
