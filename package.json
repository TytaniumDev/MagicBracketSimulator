{
  "name": "magic-bracket-simulator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "node -e \"var p=require('path'),c=require('child_process');var r=process.env.INIT_CWD||process.cwd();var s=c.spawnSync(process.execPath,[p.join(r,'scripts','run-install.js')],{stdio:'inherit'});process.exit(s.status!==null?s.status:1)\"",
    "api": "npm run dev --prefix api",
    "frontend": "npm run dev --prefix frontend",
    "dev": "node -e \"var p=require('path'),c=require('child_process');var r=process.env.INIT_CWD||process.cwd();var s=c.spawnSync(process.execPath,[p.join(r,'scripts','run-dev.js')],{stdio:'inherit'});process.exit(s.status!==null?s.status:1)\"",
    "dev:inner": "node ./node_modules/concurrently/dist/bin/concurrently.js -n api,frontend -c green,yellow \"npm run api\" \"npm run frontend\"",
    "add-allowed-user": "node scripts/add-allowed-user.js",
    "dev:keep-awake": "caffeinate -i npm run dev",
    "populate-worker-secret": "node scripts/populate-worker-secret.js",
    "populate-frontend-secret": "node scripts/populate-frontend-secret.js",
    "fetch-frontend-config": "node scripts/fetch-frontend-config.js",
    "get-cloud-run-url": "node scripts/get-cloud-run-url.js",
    "mode:local": "cp api/.env.local.example api/.env.local && cp frontend/.env.local.example frontend/.env.local && echo 'Switched to LOCAL mode. Restart dev servers to apply.'",
    "mode:hosted": "rm -f api/.env.local frontend/.env.local && echo 'Switched to HOSTED/GCP mode. Restart dev servers to apply.'"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "firebase-admin": "^13.6.0"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^5.6.0",
    "dotenv": "^17.2.3"
  }
}
